<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Lopyxxx.ChangeCostWindow"
		WindowStartupLocation="CenterScreen"
		Height="200"
		Width="200"
        Title="ChangeCostWindow">
	<DockPanel DockPanel.Dock="Top" Background="#CEFFF9">
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			<TextBlock Text="Введите сумму:" Margin="5" FontSize="16" HorizontalAlignment="Center" FontWeight="Bold"/>
			<TextBox x:Name="SumTextBox" Margin="5" Watermark="Введите сумму.." HorizontalAlignment="Center"/>
			<Button Content="Ввод" Click="Button_Click" Margin="5" HorizontalAlignment="Center" Background="#00CC76"/>
		</StackPanel>
	</DockPanel>
</Window>
